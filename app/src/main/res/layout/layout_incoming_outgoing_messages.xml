<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

        <ImageView
            android:id="@+id/messageBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/bubble_green" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:text="Hello world!"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bubble_green" />

        <TextView
            android:id="@+id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="10:30AM"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/messageText"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:id="@+id/messageBubbleSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/bubble_yellow" />

        <TextView
            android:id="@+id/messageTextSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:text="Hello world!"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bubble_yellow" />

        <TextView
            android:id="@+id/messageTimeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="10:35AM"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/messageTextSent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"/>



    </RelativeLayout>
